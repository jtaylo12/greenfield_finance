<div class="page-header">
  <h3>Loan #<%= @loan.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @loan.user_id %></dd>

      <dt>Duration</dt>
      <dd><%= @loan.duration %></dd>

      <dt>Interest rate</dt>
      <dd><%= @loan.interest_rate %></dd>

      <dt>Loan balance</dt>
      <dd><%= @loan.loan_balance %></dd>

      <dt>Loan type</dt>
      <dd><%= @loan.loan_type %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/loans" class="btn btn-primary">
        Back
      </a>
      <a href="/loans/<%= @loan.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_loan/<%= @loan.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<div class="page-header">
  <h1>
    Payments
    <a href="/payments/new" class="btn btn-lg btn-success">New Payment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Loan</th>
        <th>User</th>
        <th>Previous payment</th>
        <th>Payment due</th>
        <th>Monthly payment</th>
        <th>Total payments</th>
        <th>Payment history</th>
        <th>Actions</th>
      </tr>

      <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.loan_id %></td>
        <td><%= payment.user_id %></td>
        <td><%= payment.previous_payment %></td>
        <td><%= payment.payment_due %></td>
        <td><%= payment.monthly_payment %></td>
        <td><%= payment.total_payments %></td>
        <td><%= payment.payment_history %></td>
        <td>
          <a href="/payments/<%= payment.id %>" class="btn btn-primary">Show</a>
          <a href="/payments/<%= payment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_payment/<%= payment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

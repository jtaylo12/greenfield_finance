<!-- LOGO ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~-->
<div class="container">
    <div class="row text-center">
        <div class="col-xs-12 img-responsive text-center"><%= image_tag("greenfield_logo.png",:class=>"img-responsive img-container", :width=>"200 px", :height=>"100%")%>
</div>
    <h1><%= @user.first_name.capitalize %>'s Billing Options</h1></div><hr>
    <div class="row">
        <div class="col-md-2">
          <a href="/users/profile/<%=@user.id%>">Profile</a></br>
          <a href="/users/billing/<%=@user.id%>">Billing Options</a></br>
          <a href="/users/loans/<%=@user.id%>">Your Loan Information</a></br>
          <a href="/users/loan_request/<%=@user.id%>">Request a Loan</a></br>
        </div>
        <div class="col-md-10 text-left">
<h1 class="text-left">Current:</h1>
<ul class="text-left">

<li><h5>Billing Preference:</h5><%=@user.billing_preference%></li>
<li><h5>Automatic Debit</h5>Checking Account #:<%= @user.account_num %>, ACH Routing #:<%= @user.routing_num %></li>
</ul>

<h1 class="text-left">Update:</h1>
<form action="/users/billing/update/<%=@user.id%>" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
<ul class="text-left">

<li><label for="billing_preference" class="control-label"><h5>Billing Preference:</h5></label><%= select_tag :billing_preference, "<option>Automatic Debit</option><option>Check</option>".html_safe%>
</li>
<li><label for="account_num"><h5>Automatic Debit:</label></br><input type="integer" id="account_num" name="account_num" placeholder="Add your checking account #..." class="form-control" value="<%= @user.account_num %>"></br><input type="integer" id="routing_num" name="routing_num" placeholder="Add your routing #..." class="form-control" value="<%= @user.routing_num %>"></h5></li>

</ul>
<button class="btn btn-success">
  Save
</button></form>
        </div>
    </div>
    <div class="row text-center">
        <div class="col-xs-12">
          <h4>Terms of Service - Legal Language</h4>
          <p>legal stuff</p>
        </div>
